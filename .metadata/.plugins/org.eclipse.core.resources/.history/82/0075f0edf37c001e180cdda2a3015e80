spring:
  cloud:
    gateway:
      discovery.locator:
        enabled: true
        lowerCaseServiceId: true
      routes:
      - id: greet-routing # we can give any name
        uri: lb://GREET-API
        predicates:
        - Path=/greet
      - id: welcome- routing # we can give any name
        uri: lb://WELCOME-API
        predicates:
        - Path=/welcome
  application:
    name: CLOUD-API-GATEWAY
server:
  port: 2222